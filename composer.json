{
  "name": "presentation-scaffold/minimal-php",
  "description": "A minimal reusable PHP development scaffold with Docker, Composer, PHPUnit, .env, and a Laravel-like console for commands.",
  "type": "project",
  "license": "MIT",
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "symfony/console": "^7.0",
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@dump-env"
    ],
    "post-update-cmd": [
      "@dump-env"
    ],
    "dump-env": "php -r \"file_exists('.env') || copy('.env.example', '.env'); echo 'Environment ready'.PHP_EOL;\"",
    "test": "phpunit -c phpunit.xml"
  },
  "minimum-stability": "stable"
}
